doctype html
html
  head
    title Newton Dance Academy
    style
      include ../static/style.css
  body
        nav#navbar
            ul
                div#logo
                    img(src="/static/img/logo.png")
                    | NDA
                li #[a(href="/") Home ]
                li #[a(href="/") About ]
                li #[a(href="/") Services]
                li #[a(href="/") Class Info]
